{
  "name": "@gertalot/sliders-monorepo",
  "private": true,
  "description": "React library with custom hooks to build all kinds of sliders, knobs, and dials",
  "author": "Gert Verhoog <me@gertalot.com> (https://github.com/gertalot)",
  "keywords": [
    "react",
    "headless",
    "hook",
    "slider"
  ],
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "dev": "concurrently \"yarn workspace @gertalot/sliders dev\" \"yarn workspace @gertalot/sliders-docs start\"",
    "lint": "eslint .",
    "test": "yarn workspaces run test",
    "distclean": "yarn workspaces run distclean",
    "docs:build": "yarn workspace @gertalot/sliders-docs run docusaurus build",
    "docs:clear": "yarn workspace @gertalot/sliders-docs run docusaurus clear",
    "docs:deploy": "yarn workspace @gertalot/sliders-docs run docusaurus deploy",
    "docs:docusaurus": "yarn workspace @gertalot/sliders-docs run docusaurus",
    "docs:serve": "yarn workspace @gertalot/sliders-docs run docusaurus serve",
    "docs:start": "yarn workspace @gertalot/sliders-docs run docusaurus start",
    "docs:swizzle": "yarn workspace @gertalot/sliders-docs run docusaurus swizzle",
    "docs:typecheck": "yarn workspace @gertalot/sliders-docs run tsc",
    "docs:write-heading-ids": "yarn workspace @gertalot/sliders-docs run docusaurus write-heading-ids",
    "docs:write-translations": "yarn workspace @gertalot/sliders-docs run docusaurus write-translations",
    "hooks:build-storybook": "yarn workspace @gertalot/sliders run storybook build",
    "hooks:build": "yarn workspace @gertalot/sliders run vite build",
    "hooks:clean": "yarn workspace @gertalot/sliders run clean",
    "hooks:dev": "yarn workspace @gertalot/sliders run vite",
    "hooks:format": "yarn workspace @gertalot/sliders run format",
    "hooks:lint-staged": "yarn workspace @gertalot/sliders run lint-staged",
    "hooks:lint": "yarn workspace @gertalot/sliders run eslint src --fix",
    "hooks:prepare": "yarn workspace @gertalot/sliders run husky",
    "hooks:preview": "yarn workspace @gertalot/sliders run vite preview",
    "hooks:storybook": "yarn workspace @gertalot/sliders run storybook dev -p 6006",
    "hooks:test-watch": "yarn workspace @gertalot/sliders run vitest",
    "hooks:test:ui": "yarn workspace @gertalot/sliders run vitest --ui",
    "hooks:test": "yarn workspace @gertalot/sliders run vitest run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.10.1",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.12.2"
  }
}
