{
  "name": "sliders",
  "version": "0.1.0",
  "description": "React hooks to build all kinds of sliders, knobs, and dials",
  "author": "Gert Verhoog",
  "keywords": [
    "react",
    "headless",
    "hook",
    "slider"
  ],
  "homepage": "https://github.com/gertalot/sliders#readme",
  "repository": "github:gertalot/sliders",
  "license": "ISC",
  "private": true,
  "type": "module",
  "main": "./dist/sliders.umd.cjs",
  "module": "./dist/sliders.js",
  "exports": {
    ".": {
      "import": "./dist/sliders.js",
      "require": "./dist/sliders.umd.cjs"
    }
  },
  "scripts": {
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test-watch": "vitest",
    "test:ui": "vitest --ui",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "git clean -fXd -e \\!node_modules -e \\!node_modules/**/*"
  },
  "dependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.10.1",
    "globals": "^15.11.0",
    "jsdom": "^25.0.1",
    "prettier": "3.3.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3"
  }
}
