{
  "name": "sliders",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "lint": "eslint .",
    "clean": "yarn workspaces run clean",
    "distclean": "yarn workspaces run distclean",
    "docs:docusaurus": "yarn workspace @sliders/docs run docusaurus",
    "docs:start": "yarn workspace @sliders/docs run docusaurus start",
    "docs:build": "yarn workspace @sliders/docs run docusaurus build",
    "docs:swizzle": "yarn workspace @sliders/docs run docusaurus swizzle",
    "docs:deploy": "yarn workspace @sliders/docs run docusaurus deploy",
    "docs:clear": "yarn workspace @sliders/docs run docusaurus clear",
    "docs:serve": "yarn workspace @sliders/docs run docusaurus serve",
    "docs:write-translations": "yarn workspace @sliders/docs run docusaurus write-translations",
    "docs:write-heading-ids": "yarn workspace @sliders/docs run docusaurus write-heading-ids",
    "docs:typecheck": "yarn workspace @sliders/docs run tsc",
    "hooks:build": "yarn workspace @sliders/hooks run vite build",
    "hooks:test": "yarn workspace @sliders/hooks run vitest run",
    "hooks:test-watch": "yarn workspace @sliders/hooks run vitest",
    "hooks:test:ui": "yarn workspace @sliders/hooks run vitest --ui",
    "hooks:lint": "yarn workspace @sliders/hooks run eslint src --fix",
    "hooks:lint-staged": "yarn workspace @sliders/hooks run lint-staged",
    "hooks:preview": "yarn workspace @sliders/hooks run vite preview",
    "hooks:clean": "yarn workspace @sliders/hooks run git clean -fXd -e \\!node_modules -e \\!node_modules/**/*",
    "hooks:format": "yarn workspace @sliders/hooks run prettier --write --parser typescript '**/*.{ts,tsx}'",
    "hooks:dev": "yarn workspace @sliders/hooks run vite",
    "hooks:prepare": "yarn workspace @sliders/hooks run husky",
    "hooks:storybook": "yarn workspace @sliders/hooks run storybook dev -p 6006",
    "hooks:build-storybook": "yarn workspace @sliders/hooks run storybook build"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-storybook": "^0.10.1",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
    "typescript-eslint": "^8.12.2",
    "typescript": "~5.5.2"
  }
}
