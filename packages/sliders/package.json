{
  "name": "@gertalot/sliders",
  "version": "0.1.0",
  "description": "React library with custom hooks to build all kinds of sliders, knobs, and dials",
  "author": "Gert Verhoog <me@gertalot.com> (https://github.com/gertalot)",
  "keywords": [
    "react",
    "headless",
    "hook",
    "slider"
  ],
  "homepage": "https://github.com/gertalot/sliders#readme",
  "repository": "github:gertalot/sliders",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/gertalot"
  },
  "license": "ISC",
  "private": true,
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --options ./typedoc.json",
    "test": "vitest run",
    "test-watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --fix",
    "lint-staged": "lint-staged",
    "preview": "vite preview",
    "clean": "git clean -fXd -e \\!node_modules -e \\!node_modules/**/*",
    "distclean": "git clean -fXd",
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "dev": "vite",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.4.2",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "globals": "15.12.0"
  }
}
